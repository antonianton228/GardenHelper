<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/washingDes"
        android:layout_width="302dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:text="Вишню надо поливать раз в ....."
        app:layout_constraintBottom_toTopOf="@+id/lastWAshName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lastWash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:text="01.01.1970"
        app:layout_constraintBottom_toTopOf="@+id/notifyWash"
        app:layout_constraintStart_toEndOf="@+id/lastWAshName2" />

    <TextView
        android:id="@+id/lastWAshName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="24dp"
        android:text="Последний раз выполнялось"
        app:layout_constraintBottom_toTopOf="@+id/notifyWash"
        app:layout_constraintEnd_toStartOf="@+id/lastWash2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/notifyWash"
        android:layout_width="227dp"
        android:layout_height="49dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Вам необходимо полить растение"
        android:textColor="#269E0B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NameNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:text="Полив"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/washingDes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>